function Quiz() {
  const [materials, setMaterials] = useState(materialsData);
  const [selectedMaterial, setSelectedMaterial] = useState(null);
  const [questions, setQuestions] = useState([]);
  const [currentQuestionIndex, setCurrentQuestionIndex] = useState(0);
  const [score, setScore] = useState(0);
  const [quizFinished, setQuizFinished] = useState(false);
  const [timeLeft, setTimeLeft] = useState(30);
  const [timerActive, setTimerActive] = useState(false); // Start as false until quiz begins

  useEffect(() => {
    let timer;
    if (timerActive && timeLeft > 0 && !quizFinished) {
      timer = setTimeout(() => {
        setTimeLeft(timeLeft - 1);
      }, 1000);
    } else if (timeLeft === 0 && !quizFinished) {
      handleNextQuestion(false);
    }
    return () => clearTimeout(timer);
  }, [timeLeft, timerActive, quizFinished]);

  const handleAnswer = (isCorrect) => {
    setTimerActive(false);
    if (isCorrect) {
      setScore(score + 1);
    }
    
    // Move to next question after a short delay
    setTimeout(() => {
      handleNextQuestion(true);
    }, 2000);
  };

  const handleNextQuestion = (wasAnswered) => {
    const nextIndex = currentQuestionIndex + 1;
    
    if (nextIndex < questions.length) {
      // Move to next question and reset timer
      setCurrentQuestionIndex(nextIndex);
      setTimeLeft(30);
      setTimerActive(true);
    } else {
      setQuizFinished(true);
    }
  };

  const resetQuiz = () => {
    // Go back to material selection
    setSelectedMaterial(null);
    setQuestions([]);
    setCurrentQuestionIndex(0);
    setScore(0);
    setQuizFinished(false);
    setTimeLeft(30);
    setTimerActive(false);
  };
  
  const handleMaterialSelect = (material) => {
    // Shuffle questions for the selected material
    const shuffledQuestions = [...material.questions].sort(() => Math.random() - 0.5);
    setSelectedMaterial(material);
    setQuestions(shuffledQuestions);
    setCurrentQuestionIndex(0);
    setScore(0);
    setQuizFinished(false);
    setTimeLeft(30);
    setTimerActive(true);
  };

  return (
    <div className="py-6 md:py-10 px-4">
      {!selectedMaterial ? (
        // Material selection phase
        <MaterialSelection 
          materials={materials} 
          onSelectMaterial={handleMaterialSelect} 
        />
      ) : !quizFinished ? (
        // Quiz phase
        <div className="max-w-6xl mx-auto">
          <div className="flex items-center mb-6 max-w-4xl mx-auto">
            <button 
              className="flex items-center gap-1 text-primary-600 hover:text-primary-800 transition-colors px-2 py-1"
              onClick={resetQuiz}
            >
              <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fillRule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clipRule="evenodd" />
              </svg>
              <span className="font-medium">Kembali ke Pilihan Materi</span>
            </button>
            <h2 className="text-xl md:text-2xl font-heading font-bold text-primary-800 mx-auto pr-8">
              {selectedMaterial.title}
            </h2>
          </div>
          
          <div className="flex justify-end mb-2 max-w-4xl mx-auto">
            <div className="flex items-center gap-2 bg-white px-4 py-2 rounded-lg shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5 text-primary-600" viewBox="0 0 20 20" fill="currentColor">
                <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clipRule="evenodd" />
              </svg>
              <span className="font-medium text-gray-700">Waktu Tersisa: </span>
              <span className={`font-bold ${timeLeft <= 5 ? "text-red-600 animate-pulse" : "text-primary-700"}`}>
                {timeLeft} detik
              </span>
            </div>
          </div>
          
          <Scoreboard 
            score={score}
            totalQuestions={questions.length}
            currentQuestion={currentQuestionIndex + 1}
          />
          
          <QuestionCard
            key={currentQuestionIndex}
            question={questions[currentQuestionIndex].question}
            choices={questions[currentQuestionIndex].choices}
            correctAnswer={questions[currentQuestionIndex].correctAnswer}
            onAnswer={handleAnswer}
          />
        </div>
      ) : (
        // Quiz finished phase
        <div className="bg-white rounded-2xl shadow-card max-w-2xl mx-auto p-8 text-center">
          <div className="w-20 h-20 mx-auto mb-6 rounded-full bg-primary-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" className="h-12 w-12 text-primary-600" viewBox="0 0 20 20" fill="currentColor">
              <path fillRule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clipRule="evenodd" />
            </svg>
          </div>
          
          <h2 className="text-3xl font-heading font-bold text-primary-800 mb-1">Kuis Selesai!</h2>
          <h3 className="text-gray-600 mb-6">{selectedMaterial.title}</h3>
          
          <div className="mb-4">
            <p className="text-gray-600">Skor Akhir:</p>
            <p className="text-4xl font-bold text-primary-600 mt-1">{score} <span className="text-lg text-gray-500">dari {questions.length}</span></p>
          </div>
          
          <div className="relative h-36 w-36 mx-auto mb-6">
            <svg viewBox="0 0 36 36" className="w-full h-full">
              <path
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                fill="none"
                stroke="#E2E8F0"
                strokeWidth="3"
              />
              <path
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                fill="none"
                stroke="#4b6cb7"
                strokeWidth="3"
                strokeDasharray={`${Math.round((score / questions.length) * 100)}, 100`}
              />
              <text x="18" y="20.5" className="text-3xl font-bold" textAnchor="middle" fill="#4b6cb7">
                {Math.round((score / questions.length) * 100)}%
              </text>
            </svg>
          </div>
          
          <p className="text-gray-700 mb-8 font-medium">
            {score === questions.length 
              ? "Sempurna! Anda menguasai semua pertanyaan." 
              : score >= questions.length / 2 
                ? "Bagus! Anda memiliki pengetahuan yang baik." 
                : "Tetap semangat! Silakan coba lagi untuk meningkatkan skor Anda."}
          </p>
          
          <div className="flex flex-wrap justify-center gap-4">
            <button 
              className="btn btn-primary px-6 py-3 flex items-center gap-2" 
              onClick={resetQuiz}
            >
              <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fillRule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clipRule="evenodd" />
              </svg>
              Pilih Materi Lain
            </button>
            
            <button 
              className="btn btn-secondary px-6 py-3 flex items-center gap-2"
              onClick={() => handleMaterialSelect(selectedMaterial)}
            >
              <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fillRule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clipRule="evenodd" />
              </svg>
              Coba Lagi Materi Ini
            </button>
          </div>
        </div>
      )}
    </div>
  );
    </div>
  );
}

